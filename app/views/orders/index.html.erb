<p id="notice"><%= notice %></p>

<h1>Listing Orders for user: <%= @profile.firstname %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Time</th>
      <th>Cost</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td><%= order.oname %></td>
      <td><%= order.odescription %></td>
      <td><%= order.otime %></td>
      <td><%= order.ocost %></td>
      <td><%= link_to 'Show', profile_order_path(@profile, order) %>
      <td><%= link_to 'Destroy', profile_order_path(@profile, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </td>
      </tr>
      <%end%>
  </tbody>

</table>

<br>
<%= link_to 'Back to profile', @profile %>